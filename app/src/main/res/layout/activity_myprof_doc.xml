<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context=".MYprofPat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5sp"
            android:layout_marginRight="20sp"
            android:src="@drawable/logo_line_white"

            />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="675dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:id="@+id/A"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_bold"
                android:gravity="center"
                android:text="My Profile"
                android:textColor="@color/black"
                android:textSize="34dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <ImageView
                android:id="@+id/doc_dp"
                style="@style/roundedImageViewRounded"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_rounded_corner"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor_default" />

            <View
                android:layout_width="match_parent"
                android:layout_height="35dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="364dp"
                android:layout_height="293dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">\


                    <TextView
                        android:id="@+id/n5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular_semi_bold"
                        android:text="Name:  "
                        android:textColor="@color/black"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/n6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="31dp"
                        android:layout_toEndOf="@+id/n5"
                        android:text="    Dr."
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/n7"
                        android:layout_width="321dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_toEndOf="@id/n6"
                        android:text="Shanu Kumawat"

                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_below="@id/n5" />

                    <TextView

                        android:id="@+id/specialist"

                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/view1"
                        android:fontFamily="@font/regular_semi_bold"
                        android:text="Specialist  "
                        android:textColor="@color/black"
                        android:textSize="20dp" />


                    <TextView

                        android:layout_width="321dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view1"
                        android:layout_marginStart="50dp"
                        android:layout_toEndOf="@id/n5"
                        android:text="General Physician"
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_below="@id/specialist" />

                    <TextView
                        android:id="@+id/charge"


                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:fontFamily="@font/regular_semi_bold"
                        android:text="Charges:  "
                        android:textColor="@color/black"
                        android:textSize="20dp" />


                    <TextView

                        android:id="@id/charge_doc"
                        android:layout_width="321dp"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:layout_marginStart="50dp"
                        android:layout_toEndOf="@id/n5"
                        android:text="Rs."
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />

                    <TextView

                        android:id="@+id/charges_doc"
                        android:layout_width="321dp"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="-1dp"
                        android:layout_toEndOf="@id/n6"
                        android:text="500"
                        android:textColor="@color/black"

                        android:textSize="20dp" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_below="@id/charge" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view3"
                        android:fontFamily="@font/regular_semi_bold"
                        android:text="Timings:  "
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView

                        android:id="@id/time"
                        android:layout_width="321dp"

                        android:layout_height="wrap_content"
                        android:layout_below="@id/view3"
                        android:layout_marginStart="50dp"
                        android:layout_toEndOf="@id/n5"
                        android:text="8 to 10am and 12noon to 4pm"
                        android:textColor="@color/black"
                        android:textSize="20dp"

                        />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_below="@id/time" />


                    <View
                        android:id="@+id/view7"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_below="@id/time" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/view8"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <TextView
                android:id="@+id/edit_doc"
                android:layout_width="wrap_content"
                android:layout_height="25dp"

                android:layout_gravity="center"
                android:fontFamily="@font/regular_light"
                android:text="Edit Your Information"
                android:textColor="@color/black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>