<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".doctor_register"
    android:id="@+id/main">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="-20dp"
                    app:cardCornerRadius="28dp">

                    <LinearLayout
                        android:id="@+id/D"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="28dp">


                        <TextView
                            android:id="@+id/E"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WELCOME"
                            android:textColor="@color/my_primary"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/F"
                            android:fontFamily="@font/regular_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="SIGNUP AS A DOCTOR" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp" />


                        <ImageView
                            android:id="@+id/uploaded_img"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:src="@drawable/doctor" />

                        <View
                            android:id="@+id/J76587567"

                            android:layout_width="wrap_content"
                            android:layout_height="10dp" />


                        <Button
                            android:id="@+id/browse_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:letterSpacing="0.06"
                            android:fontFamily="@font/regular_semi_bold"
                            android:text="Browse" />

                        <TextView
                            android:id="@+id/K267"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:alpha="1"
                            android:fontFamily="@font/regular_semi_bold"
                            android:text=" ADD YOUR IMAGE:" />


                        <View
                            android:id="@+id/Gclass"

                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/H"
                            android:fontFamily="@font/regular_semi_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="1"
                            android:text="NAME:" />

                        <EditText
                            android:id="@+id/name_doc"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />


                        <!--            android:drawableEnd="@drawable/ic_baseline_done_24"/>-->
                        <View
                            android:id="@+id/J23"

                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/K"
                            android:fontFamily="@font/regular_semi_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="1"
                            android:text="EMAIL:" />

                        <EditText
                            android:id="@+id/email_doc"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress" />

                        <View
                            android:id="@+id/J765534"

                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/K1"
                            android:fontFamily="@font/regular_semi_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="PASSWORD:" />


                        <EditText
                            android:id="@+id/pass_doc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName" />

                        <View
                            android:id="@+id/J765875674"

                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:hint="@string/specialist">

                            <AutoCompleteTextView
                                android:id="@+id/specilist_doc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <View
                            android:id="@+id/J765"

                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/K2"
                            android:fontFamily="@font/regular_semi_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="1"
                            android:text="ENTER YOUR WORK EXPERIENCE (e.g., 10+ years):" />

                        <EditText
                            android:id="@+id/exp_doc"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                        <View
                            android:id="@+id/J76586"

                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/K4"
                            android:fontFamily="@font/regular_semi_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="ENTER YOUR CHARGES FOR AN APPOINTMENT:" />


                        <EditText
                            android:id="@+id/charge_doc"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />

                        <View
                            android:id="@+id/J76552546"

                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/K876"
                            android:fontFamily="@font/regular_semi_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="TIMING:" />


                        <EditText
                            android:id="@+id/time_doc"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />

                        <View
                            android:id="@+id/J765323"

                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />


                        <TextView
                            android:id="@+id/K74435"
                            android:fontFamily="@font/regular_semi_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.9"
                            android:text="DEGREE:" />

                        <EditText
                            android:id="@+id/degree_doc"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />


                        <!--            android:drawableEnd="@drawable/ic_baseline_done_24"/>-->
                        <View
                            android:id="@+id/J816382"

                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />

                        <Button
                            android:id="@+id/signupdoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/regular_semi_bold"
                            android:letterSpacing="0.06"
                            android:layout_gravity="center"
                            android:text="Finish" />


                    </LinearLayout>
    </androidx.cardview.widget.CardView>
    </ScrollView>


</RelativeLayout>



