<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0A07"
    tools:context=".HomePage">


    <RelativeLayout
        android:id="@+id/A"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.00"
        android:background="@color/my_secondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingTop="10sp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"

            android:src="@drawable/logo_line_white" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-20dp"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:id="@+id/D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/E"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular_light"
                    android:letterSpacing="0.03"
                    android:text="Hi,"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/name_of_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.99"
                    android:fontFamily="@font/regular_italic"
                    android:letterSpacing="0.03"
                    android:paddingStart="5dp"
                    android:text="Harshit"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_bold"
                android:text="Welcome Back"
                android:textColor="@color/black"
                android:textSize="34dp" />

            <View
                android:id="@+id/G"

                android:layout_width="wrap_content"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_bold"

                android:text="Category"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />

            <View
                android:id="@+id/P"

                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">


                <LinearLayout
                    android:id="@+id/spec_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/small_card1"
                        android:tag="Cardiologist"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:clickable="true"
                        android:layout_alignParentBottom="true"
                        app:cardBackgroundColor="#5C6784"
                        app:cardCornerRadius="4dp">


                        <LinearLayout
                            android:id="@+id/heart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:orientation="vertical"
                            android:paddingTop="33dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/heart"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:text="Heart"
                                android:textColor="@color/white" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/small_card2"
                        android:tag="Dentist"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#5C6784"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:id="@+id/dental"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            android:paddingTop="33dp">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:src="@drawable/tooth__2_"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:text="Dental"
                                android:textColor="@color/white" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/small_card3"
                        android:tag="Physiotherapist"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#5C6784"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:id="@+id/brain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="30dp">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:src="@drawable/brain"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:text="Brain"
                                android:textColor="@color/white" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/small_card4"
                        android:tag="ENT Specialist"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#5C6784"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:id="@+id/ENT"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="30dp">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:src="@drawable/throat"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:text="ENT"
                                android:textColor="@color/white" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/small_card5"
                        android:tag="General physician"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#5C6784"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:id="@+id/bone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="30dp">

                            <ImageView
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_gravity="center"
                                android:src="@drawable/bone"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:text="Bone"
                                android:textColor="@color/white" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:id="@+id/P1"

                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/regular_bold"
                android:text="Top Rate"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerView"
                    android:clickable="true"
                    android:scrollbars="vertical"/>




            </LinearLayout>


            <Button
                android:id="@+id/logout_pat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/regular_semi_bold"
                android:text="Log Out"
                android:textSize="16dp"></Button>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>