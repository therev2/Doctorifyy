<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor_appointment_full_screen">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="500dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingTop="70dp">

            <ImageView
                style="@style/roundedImageViewRounded"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/edit_img_rounded_corner"
                android:clipToOutline="true"
                android:id="@+id/doc_dp"

                android:src="@drawable/doctor"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doc_namee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular_bold"
                    android:paddingLeft="7dp"
                    android:text="Dr.Revan Channa"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/doc_specialistt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular_semi_bold"
                    android:paddingLeft="7dp"
                    android:text="Heart Surgeon"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="-20dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular_bold"
                android:paddingLeft="12dp"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="33dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/small_card"
                        android:layout_marginLeft="30dp"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        app:cardBackgroundColor="#5C6784"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:id="@+id/heart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:orientation="vertical"
                            android:paddingTop="33dp">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:text="Sun"
                                android:textSize="24dp"
                                android:textColor="@color/white" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:text="21"
                                android:textColor="@color/white" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/small_card2"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#5C6784"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:id="@+id/dental"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            android:paddingTop="33dp">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:text="Mon"
                                android:textSize="24dp"
                                android:textColor="@color/white" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:text="22"
                                android:textColor="@color/white" />



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/small_card3"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#5C6784"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:id="@+id/brain"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="30dp">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:text="Tue"
                                android:textSize="24dp"
                                android:textColor="@color/white" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:text="23"
                                android:textColor="@color/white" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/small_card4"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#5C6784"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:id="@+id/ENT"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="30dp">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="24dp"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:text="Wed"
                                android:textColor="@color/white" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:text="24"
                                android:textColor="@color/white" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/small_card5"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:clickable="true"
                        app:cardBackgroundColor="#5C6784"
                        app:cardCornerRadius="4dp">

                        <LinearLayout
                            android:id="@+id/bone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            android:paddingTop="30dp">



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:text="Thu"
                                android:textSize="24dp"
                                android:textColor="@color/white" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/regular_semi_bold"
                                android:gravity="center"
                                android:textSize="17dp"
                                android:text="25"
                                android:textColor="@color/white" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Make An Appointment"
                android:layout_marginTop="250dp"
                android:textSize="18dp"
                android:fontFamily="@font/regular_semi_bold"
                android:backgroundTint="@color/my_primary"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>